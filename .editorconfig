[*.cs]

# CA2227: Las propiedades de colección deben ser de solo lectura
dotnet_diagnostic.CA2227.severity = none

# CA1724: El nombre de tipo Text está en conflicto total o parcialmente con el nombre del espacio de nombres “System.Drawing.Text” definido en .NET Framework. Cambie el nombre del tipo para eliminar el conflicto.
dotnet_diagnostic.CA1724.severity = none

# CA1822: El miembro GetToken no tiene acceso a los datos de la instancia y se puede marcar como static (Shared en Visual Basic).
dotnet_diagnostic.CA1822.severity = none

# CA1062: Validar argumentos de métodos públicos
dotnet_diagnostic.CA1062.severity = none

# CA1305: Especificar IFormatProvider
dotnet_diagnostic.CA1305.severity = none

# CA3147: Marcar los controladores de verbos con validación de token antifalsificación
dotnet_diagnostic.CA3147.severity = none

# CA2000: Desechar (Dispose) objetos antes de perder el ámbito
dotnet_diagnostic.CA2000.severity = none

# CA1716: Los identificadores no deben coincidir con palabras clave
dotnet_diagnostic.CA1716.severity = none

# S1128: Unused "using" should be removed
dotnet_diagnostic.S1128.severity = none

# CS4014: Dado que no se esperaba esta llamada, la ejecución del método actual continuará antes de que se complete la llamada
dotnet_diagnostic.CS4014.severity = none

# IDE0040: Agregar modificadores de accesibilidad
dotnet_style_require_accessibility_modifiers = for_non_interface_members:none

# S1144: Unused private types or members should be removed
dotnet_diagnostic.S1144.severity = none
